{
  "name": "website-kodemia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "lint:ts": "standardx '**/*.{ts,tsx}' | snazzy",
    "lint:scss": "stylelint '**/*.scss'",
    "lint:ts:fix": "standardx '**/*.{tx,tsx}' --fix | snazzy",
    "lint:scss:fix": "stylelint '**/*.scss' --fix",
    "lint": "npm run lint:ts ; npm run lint:scss",
    "lint:fix": "npm run lint:ts:fix ; npm run lint:scss:fix",
    "chromatic": "chromatic --exit-once-uploaded",
    "test": "npm run lint"
  },
  "dependencies": {
    "@builder.io/react": "^1.1.46",
    "@analytics/google-analytics": "^0.5.3",
    "@analytics/google-tag-manager": "^0.5.1",
    "@analytics/mixpanel": "^0.4.0",
    "@hookform/resolvers": "^2.0.0-beta.5",
    "@types/react-slick": "^0.23.4",
    "@u-wave/react-vimeo": "^0.9.2",
    "analytics": "^0.7.14",
    "animate-css-grid": "^1.4.3",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "dayjs": "^1.9.3",
    "husky": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.9.7",
    "lodash": "^4.17.20",
    "next": "^10.0.5",
    "query-string": "^6.13.8",
    "react": "16.13.1",
    "react-country-flag": "^2.3.0",
    "react-dom": "16.13.1",
    "react-facebook-pixel": "^1.0.4",
    "react-hook-form": "^6.14.1",
    "react-hotjar": "^3.0.1",
    "react-phone-input-2": "^2.13.9",
    "react-slick": "^0.27.13",
    "react-toastify": "^6.2.0",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.3",
    "slick-carousel": "^1.8.1",
    "zod": "^2.0.0-beta.30"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.27",
    "@storybook/addon-controls": "^6.0.27",
    "@storybook/addon-essentials": "^6.0.27",
    "@storybook/addon-links": "^6.0.27",
    "@storybook/addons": "^6.0.27",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.0.27",
    "@types/classnames": "^2.2.10",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.10.1",
    "@types/react": "^16.9.49",
    "@types/react-gtm-module": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.1.0",
    "bulma": "^0.9.1",
    "chromatic": "^5.6.1",
    "css-loader": "^4.3.0",
    "postcss": "^8.3.6",
    "react-is": "^16.13.1",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "max-nesting-depth": 7,
      "selector-max-compound-selectors": 7,
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute"
          ]
        }
      ],
      "selector-max-id": 1
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  }
}
