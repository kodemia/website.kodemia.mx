{
  "name": "website-kodemia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "lint:ts": "standardx '**/*.{tx,tsx}' | snazzy",
    "lint:scss": "stylelint '**/*.scss'",
    "lint:ts:fix": "standardx '**/*.{tx,tsx}' --fix | snazzy",
    "lint:scss:fix": "stylelint '**/*.scss' --fix",
    "lint": "npm run lint:ts ; npm run lint:scss",
    "lint:fix": "npm run lint:ts:fix ; npm run lint:scss:fix",
    "chromatic": "chromatic --exit-once-uploaded",
    "test": "npm run lint"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dayjs": "^1.9.3",
    "husky": "^4.3.0",
    "next": "9.5.3",
    "next-compose-plugins": "^2.2.0",
    "next-images": "^1.6.0",
    "next-optimized-images": "^2.6.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.27",
    "@storybook/addon-controls": "^6.0.27",
    "@storybook/addon-essentials": "^6.0.27",
    "@storybook/addon-links": "^6.0.27",
    "@storybook/addons": "^6.0.27",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.0.27",
    "@types/classnames": "^2.2.10",
    "@types/node": "^14.10.1",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "babel-loader": "^8.1.0",
    "bulma": "^0.9.1",
    "chromatic": "^5.2.0",
    "css-loader": "^4.3.0",
    "react-is": "^16.13.1",
    "snazzy": "^8.0.0",
    "standardx": "^5.0.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "max-nesting-depth": 7,
      "selector-max-compound-selectors": 7
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
